<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-6col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">Health</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.experience.value" class="resource-label">Experience</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.experience.value" value="{{system.experience.value}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.level.value" class="resource-label">Level</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.level.value" value="{{system.attributes.level.value}}"
              data-dtype="Number" />
          </div>
        </div>





        <div class="resource flex-group-center">
          <label for="system.attributes.combatrole.value" class="resource-label">Character Role</label>
          <div class="resource-content flexrow flex-center flex-between">
            <select name="system.attributes.combatrole.value">
              <option value="" {{#if (eq system.attributes.combatrole.value "" )}}selected{{/if}}></option>
              <option value="Bard" {{#if (eq system.attributes.combatrole.value "Bard" )}}selected{{/if}}>Bard</option>
              <option value="Dwarf" {{#if (eq system.attributes.combatrole.value "Dwarf" )}}selected{{/if}}>Dwarf
              </option>
              <option value="Elf" {{#if (eq system.attributes.combatrole.value "Elf" )}}selected{{/if}}>Elf</option>
              <option value="Halfling" {{#if (eq system.attributes.combatrole.value "Halfling" )}}selected{{/if}}>
                Halfling
              </option>
              <option value="Ranger" {{#if (eq system.attributes.combatrole.value "Ranger" )}}selected{{/if}}>Ranger
              </option>
              <option value="Sorcerer" {{#if (eq system.attributes.combatrole.value "Sorcerer" )}}selected{{/if}}>
                Sorcerer</option>
              <option value="Thief" {{#if (eq system.attributes.combatrole.value "Thief" )}}selected{{/if}}>Thief
              </option>
              <option value="Warrior" {{#if (eq system.attributes.combatrole.value "Warrior" )}}selected{{/if}}>Warrior
              </option>



            </select>
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.attributes.sex.value" class="resource-label">Sex</label>
          <div class="resource-content flexrow flex-center flex-between">
            <select name="system.attributes.sex.value">
              <option value="Male" {{#if (eq system.attributes.sex.value "" )}}selected{{/if}}></option>
              <option value="Male" {{#if (eq system.attributes.sex.value "Male" )}}selected{{/if}}>Male</option>
              <option value="Female" {{#if (eq system.attributes.sex.value "Female" )}}selected{{/if}}>Female</option>
            </select>
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.attributes.size.value" class="resource-label">Size</label>
          <div class="resource-content flexrow flex-center flex-between">
            <select name="system.attributes.size.value">
              <option value="Small" {{#if (eq system.attributes.size.value "" )}}selected{{/if}}></option>
              <option value="Small" {{#if (eq system.attributes.size.value "Small" )}}selected{{/if}}>Small</option>
              <option value="Medium" {{#if (eq system.attributes.size.value "Medium" )}}selected{{/if}}>Medium
              </option>
            </select>
          </div>
        </div>
        <div class="resource flex-group-center">

          <label for="system.age.value" class="resource-label">Age</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.age.value" value="{{system.age.value}}" data-dtype="Number" />
          </div>
        </div>
        <div class="resource flex-group-center">

          <label for="system.height.value" class="resource-label">Height</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.height.value" value="{{system.height.value}}" data-dtype="Number" />
          </div>
        </div>
        <div class="resource flex-group-center">


          <label for="system.weight.value" class="resource-label">Weight</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.weight.value" value="{{system.weight.value}}" data-dtype="Number" />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.movementrate.value" class="resource-label">Movement rate</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.movementrate.value" value="{{system.movementrate.value}}" data-dtype="Number" />
          </div>
        </div>

      </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="features">Main</a>
    <!--a class="item" data-tab="description">Description</a-->
    <!--a class="item" data-tab="items">Inventory</a-->
    <!--a class="item" data-tab="spells">Spells</a-->
    <a class="item" data-tab="effects">Effects</a>
    <a class="item" data-tab="companions">Companions</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      <section class="grid grid-3col">


        {{!-- For the main features list, span the right two columns --}}
        <section class="main grid-span-3">
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in
          module/helpers/templates.mjs --}}
          {{> "systems/reconquest/templates/actor/parts/actor-features.hbs"}}
        </section>

      </section>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}

      <div class="resources grid grid-5col">
        <div class="resource flex-group-center">
          <h2>Basic info</h2>

        </div>
        <div class="resource flex-group-center grid-span-4">
          <h2>Biography</h2>

        </div>
      </div>
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/reconquest/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/reconquest/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/reconquest/templates/actor/parts/actor-effects.hbs"}}
    </div>

    {{!-- Companions Tab --}} 
    <div class="tab companions" data-group="primary" data-tab="companions">
      {{> "systems/reconquest/templates/actor/parts/actor-companions.hbs"}}
    </div>

  </section>
</form>