<div class="resources grid grid-10col">
  <div class="resource flex-group-center grid-span-2">
    <h2 class="section-header">Abilities</h2>
    <div class="abilitygroupcontainer">
      <div class="abilitygrouplabel">
        <h4>Physical</h4>
      </div>
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.strength.value" class="resource-label rollable flexlarge align-left"
            data-roll="d20" data-label="">Strength</label>
          <input type="text" name="system.abilities.str.value" value="{{system.abilities.str.value}}"
            data-dtype="Number" />
        </div>

        <div class="ability flexrow flex-group-left">
          OV MÊ: {{numberFormat system.abilities.str.ovme decimals=0 sign=true}}
        </div>

        <div class="ability flexrow flex-group-left">
          Carrying capacity: {{numberFormat system.abilities.str.carrycapacity decimals=0}}({{numberFormat
          system.abilities.str.maximumcapacity decimals=0}}) lbs
        </div>
      </div>
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.strength.value" class="resource-label rollable flexlarge align-left"
            data-roll="d20" data-label="">Dexterity</label>
          <input type="text" name="system.abilities.dex.value" value="{{system.abilities.dex.value}}"
            data-dtype="Number" />
        </div>

        <div class="ability flexrow flex-group-left">
          OV MI: {{numberFormat system.abilities.dex.ovmi decimals=0 sign=true}}
        </div>

        <div class="ability flexrow flex-group-left">
          DV: {{numberFormat system.abilities.dex.dv decimals=0 sign=true}}
        </div>

        <div class="ability flexrow flex-group-left">
          Initiative: {{numberFormat system.abilities.dex.dv decimals=0 sign=true}}
        </div>

        <div class="ability flexrow flex-group-left">
          Climbing rate: {{numberFormat system.abilities.dex.climbingrate decimals=0 }} ft
        </div>
      </div>
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.strength.value" class="resource-label rollable flexlarge align-left"
            data-roll="d20" data-label="">Constitution</label>
          <input type="text" name="system.abilities.con.value" value="{{system.abilities.con.value}}"
            data-dtype="Number" />
        </div>

        <div class="ability flexrow flex-group-left">
          Swim rate: {{numberFormat system.abilities.con.swimmingrate decimals=0 }} ft
        </div>

        <div class="ability flexrow flex-group-left">
          Hold breath: {{numberFormat system.abilities.con.holdbreath decimals=0}} rounds
        </div>
      </div>
    </div>
    <div class="abilitygroupcontainer">
      <div class="abilitygrouplabel">
        <h4>Mental</h4>
      </div>
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.strength.value" class="resource-label rollable flexlarge align-left"
            data-roll="d20" data-label="">Intelligence</label>
          <input type="text" name="system.abilities.int.value" value="{{system.abilities.int.value}}"
            data-dtype="Number" />
        </div>

        <div class="ability flexrow flex-group-left">
          Daily spells: {{numberFormat system.abilities.int.dailyspells decimals=0}}
        </div>

        <div class="ability flexrow flex-group-left">
          Extra languages: {{numberFormat system.abilities.int.extralanguages decimals=0}}
        </div>
      </div>
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.strength.value" class="resource-label rollable flexlarge align-left"
            data-roll="d20" data-label="">Willpower</label>
          <input type="text" name="system.abilities.wil.value" value="{{system.abilities.wil.value}}"
            data-dtype="Number" />
        </div>
      </div>
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.strength.value" class="resource-label rollable flexlarge align-left"
            data-roll="d20" data-label="">Charisma</label>
          <input type="text" name="system.abilities.cha.value" value="{{system.abilities.cha.value}}"
            data-dtype="Number" />
        </div>

        <div class="ability flexrow flex-group-left">
          Max retainers: {{numberFormat system.abilities.cha.maxretainers}}
        </div>
        <div class="ability flexrow flex-group-left">
          Max hirelings: {{numberFormat system.abilities.cha.maxhirelings}}
        </div>
      </div>
    </div>
  </div>
  <div class="resource flex-group-center grid-span-6">
    <div class="widecontainer">
      <h2>Weapons & Armor</h2>
      <div class="resources grid grid-4col">


        <div class="resource flex-group-center">
          <label for="system.abilities.str.ovme" class=" resource-label flexlarge align-left">Total OV Mêlée
          </label>
          <input type="text" name="system.abilities.str.ovme" disabled value="⚔️NYI" data-dtype="Number" />

        </div>

        <div class="resource flex-group-center">
          <label for="system.abilities.dex.ovmi" class="resource-label flexlarge align-left">Total OV Missile
          </label>
          <input type="text" name="system.abilities.dex.ovmi" disabled value="🏹NYI" data-dtype="Number" />

        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.asd.value" class="resource-label">Total DV Mêlée</label>
          <input type="text" disabled name="system.combatstats.asd.value" value="🛡️NYI" data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.asd.value" class="resource-label">Total DV Missile</label>
          <input type="text" disabled name="system.combatstats.asd.value" value="🛡️NYI" data-dtype="Number" />
        </div>

      </div>
      <ol class='items-list'>
        <li class='item flexrow items-header'>
          <div class='item-name'>{{localize 'Name'}}</div>
          <div class='item-formula'>Damage</div>
          <div class='item-formula'>Reach</div>
          <div class='item-controls'>
            <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='item'>
              <i class='fas fa-plus'></i>
              New
            </a>
          </div>
        </li>
        {{#each gear as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
          <div class='item-name'>
            <div class='item-image'>
              <a class='rollable' data-roll-type='item'>
                <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
              </a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div class='item-damage item-prop'>{{item.system.damage}}</div>
          <div class='item-reach item-prop'>{{item.system.reach}}</div>
          <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
              <i class='fas fa-edit'></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>
    <div class="widecontainer">

      <div class="combatstatcontainer resources grid grid-5col">

        <div class="resource flex-group-center">
          <label for="system.combatstats.baseov.value" class="resource-label flexlarge align-left">Base
            OV</label>
          <input type="text" name="system.combatstats.baseov.value" value="{{system.combatstats.baseov.value}}"
            data-dtype="Number" />
        </div>

        <div class="resource flex-group-center">
          <label for="system.combatstats.attackrate.value" class="resource-label flexlarge align-left">Attack rate</label>
          <input type="text" name="system.combatstats.attackrate.value" value="{{system.combatstats.attackrate.value}}"
            data-dtype="Text" />
        </div>

        <div class="resource flex-group-center">
          <label for="system.combatstats.basedvme.value" class="resource-label">Base DV MÊ</label>
          <input type="text" name="system.combatstats.basedvme.value" value="{{system.combatstats.basedvme.value}}"
            data-dtype="Number" />
        </div>

        <div class="resource flex-group-center">

          <label for="system.combatstats.basedvmi.value" class="resource-label">Base DV MI</label>
          <input type="text" name="system.combatstats.basedvmi.value" value="{{system.combatstats.basedvmi.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.criticaldamagethreshold.value" class="resource-label">Dmg threshold</label>
          <input type="text" name="system.combatstats.criticaldamagethreshold.value"
            value="{{system.combatstats.criticaldamagethreshold.value}}" data-dtype="Number" />
        </div>
      </div>

      <div class="combatstatcontainer resources grid grid-5col">
        <h3 class="grid-span-5">Armor</h3>

        <div class="resource flex-group-center">
          <label for="system.combatstats.armordv.value" class="resource-label">DV</label>
          <input type="text" name="system.combatstats.armordv.value" value="{{system.combatstats.armordv.value}}"
            data-dtype="Number" />
        </div>

        <div class="resource flex-group-center">
          <label for="system.combatstats.armormaxdex.value" class="resource-label">Max DEX</label>
          <input type="text" name="system.combatstats.armormaxdex.value" value="{{system.combatstats.armormaxdex.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.armorasda.value" class="resource-label">ASDA</label>
          <input type="text" name="system.combatstats.armorasda.value" value="{{system.combatstats.armorasda.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.armormr.value" class="resource-label">MR</label>
          <input type="text" name="system.combatstats.armormr.value" value="{{system.combatstats.armormr.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.armorweight.value" class="resource-label">Weight</label>
          <input type="text" name="system.combatstats.armorweight.value" value="{{system.combatstats.armorweight.value}}"
            data-dtype="Number" />
        </div>

      </div>
      <div class="combatstatcontainer resources grid grid-5col">
        <h3 class="grid-span-5">Helmet</h3>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmetdv.value" class="resource-label">DV</label>
          <input type="text" name="system.combatstats.helmetdv.value" value="{{system.combatstats.helmetdv.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmetmaxdex.value" class="resource-label">Max DEX</label>
          <input type="text" name="system.combatstats.helmetmaxdex.value" value="{{system.combatstats.helmetmaxdex.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmetasda.value" class="resource-label">ASDA</label>
          <input type="text" name="system.combatstats.helmetasda.value" value="{{system.combatstats.helmetasda.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmetovmiperception.value" class="resource-label">OV MI/Perception</label>
          <input type="text" name="system.combatstats.helmetovmiperception.value" value="{{system.combatstats.helmetovmiperception.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmetweight.value" class="resource-label">Weight</label>
          <input type="text" name="system.combatstats.helmetweight.value" value="{{system.combatstats.helmetweight.value}}"
            data-dtype="Number" />
        </div>



      </div>
      <div class="combatstatcontainer resources grid grid-5col">
        <h3 class="grid-span-5">Shield</h3>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shielddvme.value" class="resource-label">DV MÊ</label>
          <input type="text" name="system.combatstats.shielddvme.value" value="{{system.combatstats.shielddvme.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shielddvmi.value" class="resource-label">DV MI</label>
          <input type="text" name="system.combatstats.shielddvmi.value" value="{{system.combatstats.shielddvmi.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shieldblock.value" class="resource-label">Shield Block</label>
          <input type="text" name="system.combatstats.shieldblock.value" value="{{system.combatstats.shieldblock.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shieldasda.value" class="resource-label">ASDA</label>
          <input type="text" name="system.combatstats.shieldasda.value" value="{{system.combatstats.shieldasda.value}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shieldweight.value" class="resource-label">Weight</label>
          <input type="text" name="system.combatstats.shieldweight.value" value="{{system.combatstats.shieldweight.value}}"
            data-dtype="Number" />
        </div>



      </div>
      <div class="widecontainer">
        <h2 class='section-header'>Features</h2>
        <ol class='items-list'>
          <li class='item flexrow items-header'>
            <div class='item-name'>{{localize 'Name'}}</div>
            <div class='item-controls'>
              <a class='item-control item-create' title='Add feature' data-type='feature'>
                <i class='fas fa-plus'></i>
                New
              </a>
            </div>
          </li>
          {{#each features as |item id|}}
          <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
              <div class='item-image'>
                <a class='rollable' data-roll-type='item'>
                  <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                </a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class='item-controls'>
              <a class='item-control item-edit' title='Edit'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='Delete'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
      <div class="widecontainer">
        <h2 class='section-header'>Spells</h2>
        <ol class='items-list'>
          {{#each spells as |spells spellLevel|}}
          <li class='item flexrow items-header'>
            <div class='item-name'>
              Spells
            </div>
            <div class='item-controls'>
              <a class='item-control item-create' title='New' data-type='spell' data-spell-level='{{spellLevel}}'>
                <i class='fas fa-plus'></i>
                New
              </a>
            </div>
          </li>
          {{#each spells as |item id|}}
          <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name flexrow'>
              <div class='item-image'>
                <a class='rollable' data-roll-type='item'><img src='{{item.img}}' title='{{item.name}}' width='24'
                    height='24' /></a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class='item-controls'>
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' spell'}}'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' spell'}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          </li>
          {{/each}}
          {{/each}}
        </ol>
      </div>
    </div>
    <h2>Notes</h2>
    <div class="tab biography widecontainer notescontainer">

      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>


  </div>
  <div class="resource flex-group-center grid-span-2">
    <div class="widecontainer">

      <h2 class="section-header">Conditions</h2>
      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Afraid</label>
        <input type="checkbox" name="system.conditions.afraid" {{#if system.conditions.afraid}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Blinded</label>
        <input type="checkbox" name="system.conditions.blinded" {{#if system.conditions.blinded}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Encumbered</label>
        <input type="checkbox" name="system.conditions.encumbered" {{#if system.conditions.encumbered}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Entangled</label>
        <input type="checkbox" name="system.conditions.entangled" {{#if system.conditions.entangled}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Helpless</label>
        <input type="checkbox" name="system.conditions.helpless" {{#if system.conditions.helpless}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Poisoned</label>
        <input type="checkbox" name="system.conditions.poisoned" {{#if system.conditions.poisoned}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Seriously Injured</label>
        <input type="checkbox" name="system.conditions.seriouslyinjured" {{#if
          system.conditions.seriouslyinjured}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Sick</label>
        <input type="checkbox" name="system.conditions.sick" {{#if system.conditions.sick}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Soaking Wet</label>
        <input type="checkbox" name="system.conditions.soakingwet" {{#if system.conditions.soakingwet}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Stunned</label>
        <input type="checkbox" name="system.conditions.stunned" {{#if system.conditions.stunned}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Tired</label>
        <input type="checkbox" name="system.conditions.tired" {{#if system.conditions.tired}}checked{{/if}}>
      </div>

      <div class="ability flexrow flex-group-center flex-wrap">
        <label class="resource-label flexlarge align-left">Submerged</label>
        <input type="checkbox" name="system.conditions.submerged" {{#if system.conditions.submerged}}checked{{/if}}>
      </div>
    </div>
    <h2 class='section-header'>Currency</h2>
    <div class="ability flexrow flex-group-center">
      <label title="Aurichalcum pieces" for="system.currency.ap.value"
        class="resource-label flexlarge align-left">Aurichalcum</label>
      <input type="text" name="system.currency.ap.value" value="{{system.currency.ap.value}}" data-dtype="Number" />
    </div>

    <div class="ability flexrow flex-group-center">
      <label title="Gold pieces" for="system.currency.gp.value" class="resource-label flexlarge align-left">Gold
      </label>
      <input type="text" name="system.currency.gp.value" value="{{system.currency.gp.value}}" data-dtype="Number" />
    </div>

    <div class="ability flexrow flex-group-center">
      <label title="Silver pieces" for="system.currency.sp.value" class="resource-label flexlarge align-left">Silver
      </label>
      <input type="text" name="system.currency.sp.value" value="{{system.currency.sp.value}}" data-dtype="Number" />
    </div>

    <div class="ability flexrow flex-group-center">
      <label title="Copper pieces" for="system.currency.cp.value" class="resource-label flexlarge align-left">Copper
      </label>
      <input type="text" name="system.currency.cp.value" value="{{system.currency.cp.value}}" data-dtype="Number" />
    </div>
  </div>

</div>