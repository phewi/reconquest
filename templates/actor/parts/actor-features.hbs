<div class="resources grid grid-10col">
  <div class="resource flex-group-center grid-span-2">
    <h2 class="section-header">Abilities</h2>
    <div class="abilitygroupcontainer">
      <div class="abilitygrouplabel">
        <h4>Physical</h4>
      </div>
      {{!-- Strength --}}
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.str.value" class="resource-label flexlarge align-left">Strength</label>
          <input class="abilityscore" type="text" name="system.abilities.str.value"
            value="{{system.abilities.str.value}}" data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <label class="resource-label flexlarge align-left">Modifier:</label>
          <input class="rollmod" type="text" name="system.abilities.str.rollmod"
            value="{{system.abilities.str.rollmod}}" data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <button class="rollable" data-roll="d20+@abilities.str.rollmod{{#if (gt system.combatstats.armor.asda 0)}}+@combatstats.armor.asda{{/if}}{{#if (gt system.combatstats.helmet.asda 0)}}+@combatstats.helmet.asda{{/if}}{{#if (eq system.combatstats.shield.location "In hand" )}}+@combatstats.shield.asda{{/if}}{{#if (eq system.combatstats.shield.location "On back")}}+@combatstats.shield.asdaonback{{/if}}" data-label="<h3>Strength</h3>">Roll Strength</button>
        </div>
      </div>
      {{!-- Dexterity --}}      
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.dex.value" class="resource-label flexlarge align-left">Dexterity</label>
          <input class="abilityscore" type="text" name="system.abilities.dex.value"
            value="{{system.abilities.dex.value}}" data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <label class="resource-label flexlarge align-left">Modifier:</label>
          <input class="rollmod" type="text" name="system.abilities.dex.rollmod"
            value="{{system.abilities.dex.rollmod}}" data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <button class="rollable" data-roll="d20+@abilities.dex.rollmod{{#if (gt system.combatstats.armor.asda 0)}}+@combatstats.armor.asda{{/if}}{{#if (gt system.combatstats.helmet.asda 0)}}+@combatstats.helmet.asda{{/if}}{{#if (eq system.combatstats.shield.location "In hand" )}}+@combatstats.shield.asda{{/if}}{{#if (eq system.combatstats.shield.location "On back")}}+@combatstats.shield.asdaonback{{/if}}" data-label="<h3>Dexterity</h3>">Roll Dexterity</button>
        </div>
      </div>
      {{!-- Constitution --}}
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.con.value" class="resource-label flexlarge align-left">Constitution</label>
          <input class="abilityscore" type="text" name="system.abilities.con.value"
            value="{{system.abilities.con.value}}" data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <label class="resource-label flexlarge align-left">Modifier:</label>
          <input class="rollmod" type="text" name="system.abilities.con.rollmod"
            value="{{system.abilities.con.rollmod}}" data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <button class="rollable" data-roll="d20+@abilities.con.rollmod{{#if (gt system.combatstats.armor.asda 0)}}+@combatstats.armor.asda{{/if}}{{#if (gt system.combatstats.helmet.asda 0)}}+@combatstats.helmet.asda{{/if}}{{#if (eq system.combatstats.shield.location "In hand" )}}+@combatstats.shield.asda{{/if}}{{#if (eq system.combatstats.shield.location "On back")}}+@combatstats.shield.asdaonback{{/if}}" data-label="<h3>Constitution</h3>">Roll Constitution</button>
        </div>

      </div>
        +{{#if (eq system.combatstats.shield.location "In hand" )}}{{system.combatstats.totalequipasdainhand}}{{else}}{{#if (eq system.combatstats.shield.location "On back")}}{{system.combatstats.totalequipasdaonback}}{{else}}{{system.combatstats.totalequipasdanoshield}}{{/if}}{{/if}}
        to rolls from equipment
    </div>
    <div class="abilitygroupcontainer">
      <div class="abilitygrouplabel">
        <h4>Mental</h4>
      </div>
      {{!-- Intelligence --}}
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.int.value" class="resource-label flexlarge align-left">Intelligence</label>
          <input class="abilityscore" type="text" name="system.abilities.int.value" value="{{system.abilities.int.value}}"
            data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <label class="resource-label flexlarge align-left">Modifier:</label>
          <input class="rollmod" type="text" name="system.abilities.int.rollmod" value="{{system.abilities.int.rollmod}}"
            data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <button class="rollable" data-roll="d20+@abilities.int.rollmod" data-label="<h3>Intelligence</h3>">Roll
            Intelligence</button>
        </div>
      </div>
      {{!-- Willpower --}}
      <div class="abilitycontainer">
        <div class="ability flexrow flex-group-center">
          <label for="system.abilities.wil.value" class="resource-label flexlarge align-left">Willpower</label>
          <input class="abilityscore" type="text" name="system.abilities.wil.value" value="{{system.abilities.wil.value}}"
            data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <label class="resource-label flexlarge align-left">Modifier:</label>
          <input class="rollmod" type="text" name="system.abilities.wil.rollmod" value="{{system.abilities.wil.rollmod}}"
            data-dtype="Number" />
        </div>
        <div class="ability flexrow flex-group-center">
          <button class="rollable" data-roll="d20+@abilities.wil.rollmod" data-label="<h3>Willpower</h3>">Roll
            Willpower</button>
        </div>
      </div>
        {{!-- Charisma --}}
        <div class="abilitycontainer">
          <div class="ability flexrow flex-group-center">
            <label for="system.abilities.cha.value" class="resource-label flexlarge align-left">Charisma</label>
            <input class="abilityscore" type="text" name="system.abilities.cha.value" value="{{system.abilities.cha.value}}"
              data-dtype="Number" />
          </div>
          <div class="ability flexrow flex-group-center">
            <label class="resource-label flexlarge align-left">Modifier:</label>
            <input class="rollmod" type="text" name="system.abilities.cha.rollmod" value="{{system.abilities.cha.rollmod}}"
              data-dtype="Number" />
          </div>
          <div class="ability flexrow flex-group-center">
            <button class="rollable" data-roll="d20+@abilities.cha.rollmod" data-label="<h3>Charisma</h3>">Roll
              Charisma</button>
          </div>
    
    
      </div>
    </div>
        <div class="abilitymodifiercontainer">

          {{!-- Modifiers to roll --}}
          <div class="ability flexrow flex-group-left">
            <label class="resource-label flexlarge align-left"> Physical ability roll modifier breakdown:</label>
          </div>

          {{!-- Armor --}}
          <div class="ability flexrow flex-group-left">
            {{#if system.combatstats.armor.asda}}Armor: +{{system.combatstats.armor.asda}}{{/if}}
          </div>

          {{!-- Helmet --}}
          <div class="ability flexrow flex-group-left">
            {{#if system.combatstats.helmet.asda}}Helmet: +{{system.combatstats.helmet.asda}}{{/if}}
          </div>

          {{!-- Shield --}}
          <div class="ability flexrow flex-group-left">
            {{#if (eq system.combatstats.shield.location "In hand" )}}Shield in hand:
            +{{system.combatstats.shield.asda}} {{/if}}{{#if (eq system.combatstats.shield.location "On back" )}}Shield
            on back: +{{system.combatstats.shield.asdaonback}} {{/if}}
          </div>

        </div>
  </div>
  <div class="resource flex-group-center grid-span-6">
    <div class="widecontainer">
      <h2>Weapons & Armor</h2>
      <div class="resources grid grid-4col">
        
        {{!-- Total OV Melee --}}
        <div class="resource flex-group-center">
          <label for="system.combatstats.totalovme" class=" resource-label flexlarge align-left"
            title="OV ME from STR + OV from CR + dual wield bonus + weapon mod + -2 if afraid">Total OV Mêlée
          </label>
          <input type="text" name="system.combatstats.totalovme" disabled value="⚔️{{system.combatstats.totalovme}}" data-dtype="Number" />
        </div>
          
        {{!-- Total OV Missile --}}
        <div class="resource flex-group-center">
          <label for="system.combatstats.totalovmi" class="resource-label flexlarge align-left"
            title="OV MI from DEX + OV from CR + -1 helmet penalty + -2 heavy helmet penalty + 2 if aiming + weapon mod + -2 if afraid">Total
            OV Missile
          </label>
          <input type="text" name="system.combatstats.totalovmi" disabled value="🏹{{system.combatstats.totalovmi}}" data-dtype="Number" />

        </div>
        
        {{!-- Total DV Melee --}}
        <div class="resource flex-group-center">
          <label for="system.combatstats.totaldvme" class="resource-label"
            title="dex dv + cr dv + armor dv + helmet dv + shield dv + -2 if afraid">Total DV Mêlée</label>
          <input type="text" disabled name="system.combatstats.totaldvme" value="🛡️{{#if (eq system.combatstats.shield.location "In hand" )}}{{system.combatstats.totaldvme}}{{else}}{{system.combatstats.totaldvmenoshield}}{{/if}}" data-dtype="Number" />
        </div>
        
        {{!-- Total DV Missile --}}
        <div class="resource flex-group-center">
          <label for="system.combatstats.totaldvmi" class="resource-label"
            title="10 + 2 size bonus for dwarf/halfling + dex dv + -2 if afraid">Total DV Missile</label>
          <input type="text" disabled name="system.combatstats.totaldvmi" value="🛡️{{#if (eq system.combatstats.shield.location "In hand" )}}{{system.combatstats.totaldvmi}}{{else}}{{system.combatstats.totaldvminoshield}}{{/if}}" data-dtype="Number" />
        </div> 
        

        <div class="resource flex-group-center"></div>
        {{!-- Attack rate --}}
        <div class="resource flex-group-center">
          <label for="system.combatstats.attackrate.value" class="resource-label flexlarge align-left">Attack
            rate</label>
          <input type="text" name="system.combatstats.attackrate.value" value="{{system.combatstats.attackrate.value}}"
            data-dtype="Text" />
        </div>
        
        {{!-- Shield location --}}
        <div class="resource flex-group-center">
        <label for="system.combatstats.shield.location" class="resource-label">Shield</label>
        <select name="system.combatstats.shield.location">
          <option value="No Shield" {{#if (eq system.combatstats.shield.location "No Shield" )}}selected{{/if}}{{#if (eq
            system.combatstats.shieldlocation.value "" )}}selected{{/if}}>No Shield</option>
          <option value="In hand" {{#if (eq system.combatstats.shield.location "In hand" )}}selected{{/if}}>In hand
          </option>
          <option value="On back" {{#if (eq system.combatstats.shield.location "On back" )}}selected{{/if}}>On back
          </option>
        </select>        
        </div>


      </div>
      <ol class='items-list'>
        <li class='item flexrow items-header'>
          <div class='item-name'>{{localize 'Name'}}</div>
          <div class='item-formula'>Damage</div>
          <div class='item-formula'>Reach</div>
          <div class='item-controls'>
            <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='item'>
              <i class='fas fa-plus'></i>
              New
            </a>
          </div>
        </li>
        {{#each gear as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
          <div class='item-name'>
            {{!-- Attack Roll --}}
            <div class='item-controls item-announce'>
              <a {{#if item.system.damage}}class='rollable'{{/if}} data-roll="1d20+@combatstats.totalov{{#if (eq item.system.weapontype "Melee")}}me{{else}}mi{{/if}}" data-label="<h3>{{item.name}}: Attack</h3>{{item.system.description}}">
                {{#if item.system.damage}}<i class='fas fa-dice-d20'></i>{{/if}}
              </a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          {{!-- Damage Roll --}}
          <div class='item-damage item-prop'>
            <a {{#if item.system.damage}}class='rollable' {{/if}} data-roll="{{item.system.damage}}" data-label="<h3>{{item.name}}: Damage</h3>">{{#if item.system.damage}}{{item.system.damage}}{{/if}}</a>
            

          </div>
          <div class='item-reach item-prop'>{{item.system.reach}}</div>
          <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
              <i class='fas fa-edit'></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

      {{!-- Features --}}
      <div class="widecontainer">
        <h2 class='section-header'>Features</h2>
        <ol class='items-list'>
          <li class='item flexrow items-header'>
            <div class='item-name'>{{localize 'Name'}}</div>
            <div class='item-controls'>
              <a class='item-control item-create' title='Add feature' data-type='feature'>
                <i class='fas fa-plus'></i>
                New
              </a>
            </div>
          </li>
          {{#each features as |item id|}}
          <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
              <div class='item-controls item-announce'>
                <a class='item-control rollable' data-roll-type='item'>
                  <i class="fas fa-comment"></i>
                </a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class='item-controls'>
              <a class='item-control item-edit' title='Edit'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='Delete'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Equipment --}}
      <div class="widecontainer">
        <h2 class="grid-span-6">Equipment</h2>
        <div class="resource flex-group-center"></div>
        <div class="combatstatcontainer resources grid grid-6col">
        
        {{!-- Armor --}}
        <div class="resource flex-group-center grid-span-2">
          <label class="resource-label">Armor</label>
          <input type="text" name="system.combatstats.armor.name" value="{{system.combatstats.armor.name}}"
          />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.armor.dv" class="resource-label">DV</label>
          <input type="text" name="system.combatstats.armor.dv" value="{{system.combatstats.armor.dv}}"
            data-dtype="Number" />
        </div>

        <div class="resource flex-group-center">
          <label for="system.combatstats.armor.maxdex" class="resource-label">Max DEX</label>
          <input type="text" name="system.combatstats.armor.maxdex"
            value="{{system.combatstats.armor.maxdex}}" data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.armor.asda" class="resource-label" title="Ability Score Die Adjustment to physical rolls">ASDA</label>
          <input type="text" name="system.combatstats.armor.asda" value="{{system.combatstats.armor.asda}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.armor.mr" class="resource-label" title="Adjustment to movement rate">MR</label>
          <input type="number" min="0" oninput="validity.valid||(value='');" name="system.combatstats.armor.mr" value="{{system.combatstats.armor.mr}}"
            data-dtype="Number" />
        </div>
        
        
        {{!-- Helmet --}}
        <div class="resource flex-group-center grid-span-2">
          <label for="system.combatstats.helmet.name" class="resource-label">Helmet</label>
          <input type="text" name="system.combatstats.helmet.name" value="{{system.combatstats.helmet.name}}"
            />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmet.dv" class="resource-label">DV</label>
          <input type="text" name="system.combatstats.helmet.dv" value="{{system.combatstats.helmet.dv}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmet.maxdex" class="resource-label">Max DEX</label>
          <input type="text" name="system.combatstats.helmet.maxdex"
            value="{{system.combatstats.helmet.maxdex}}" data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmet.asda" class="resource-label" title="Ability Score Die Adjustment to physical rolls">ASDA</label>
          <input type="text" name="system.combatstats.helmet.asda" value="{{system.combatstats.helmet.asda}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.helmet.ovmi" class="resource-label">OV MI</label>
          <input type="text" name="system.combatstats.helmet.ovmi"
            value="{{system.combatstats.helmet.ovmi}}" data-dtype="Number" />
        </div>
        

        {{!-- Shield --}}
        <div class="resource flex-group-center grid-span-2">
          <label for="system.combatstats.shield.name" class="resource-label">Shield</label>
          <input type="text" name="system.combatstats.shield.name" value="{{system.combatstats.shield.name}}"
            />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shield.dvme" class="resource-label">DV MÊ</label>
          <input type="text" name="system.combatstats.shield.dvme" value="{{system.combatstats.shield.dvme}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shield.dvmi" class="resource-label">DV MI</label>
          <input type="text" name="system.combatstats.shield.dvmi" value="{{system.combatstats.shield.dvmi}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shield.asda" class="resource-label" title="Ability Score Die Adjustment to physical rolls">ASDA</label>
          <input type="text" name="system.combatstats.shield.asda" value="{{system.combatstats.shield.asda}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.shield.block" class="resource-label" title="Added if you spend your action only blocking (no dodging)">Block</label>
          <input type="text" name="system.combatstats.shield.block" value="{{system.combatstats.shield.block}}"
            data-dtype="Number" />
        </div>

        {{!-- Base --}}
        <div class="resource flex-group-center grid-span-2"></div>
         <div class="resource flex-group-center">
          <label for="system.combatstats.base.ovme" class="resource-label flexlarge align-left" title="OV ME bonus from CR level (see Adjustments for Combat)">Base <br>OV ME</label>
          <input type="text" name="system.combatstats.base.ovme" value="{{system.combatstats.base.ovme}}" data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.base.dvme" class="resource-label" title="Adjustment from CR level (from +10 to +13) + Adjustment to DV for DEX">Base <br>DV MÊ</label>
          <input type="text" name="system.combatstats.base.dvme" value="{{system.combatstats.base.dvme}}"
            data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.base.ovmi" class="resource-label flexlarge align-left" title="OV MI bonus from CR level (see Adjustments for Combat)">Base <br> OV MI</label>
          <input type="text" name="system.combatstats.base.ovmi" value="{{system.combatstats.base.ovmi}}" data-dtype="Number" />
        </div>
        <div class="resource flex-group-center">
          <label for="system.combatstats.base.dvmi" class="resource-label" title="10 + Adjustment for size (+2 for Dwarf & Halfling) + adjustment to DV for DEX">Base <br>DV MI</label>
          <input type="text" name="system.combatstats.base.dvmi" value="{{system.combatstats.base.dvmi}}"
            data-dtype="Number" />
        </div>
      </div>

      <div class="widecontainer">
        <h2 class='section-header'>Spells</h2>
        <ol class='items-list'>
          {{#each spells as |spells spellLevel|}}
          <li class='item flexrow items-header'>
            <div class='item-name'>
              Spells
            </div>
            <div class='item-controls'>
              <a class='item-control item-create' title='New' data-type='spell' data-spell-level='{{spellLevel}}'>
                <i class='fas fa-plus'></i>
                New
              </a>
            </div>
          </li>
          {{#each spells as |item id|}}
          <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name flexrow'>
              <div class='item-image'>
                <a class='rollable' data-roll-type='item'><img src='{{item.img}}' title='{{item.name}}' width='24'
                    height='24' /></a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class='item-controls'>
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' spell'}}'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' spell'}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          </li>
          {{/each}}
          {{/each}}
        </ol>
        <div class="combatstatcontainer resources grid grid-5col">
          <div title="Based on INT + CR level" class="resource flex-group-center grid-span-1">
            <label title="Based on INT + CR level" for="system.attributes.spells.daily" class="resource-label">Daily
              spells</label>
            <input type="text" name="system.attributes.spells.daily" value="{{system.attributes.spells.daily}}"
              data-dtype="Number" />
          </div>

          <div title="Based on INT + CR level" class="resource flex-group-center grid-span-1">
            <label title="Based on INT + CR level" for="system.attributes.spells.used" class="resource-label">Spells
              used</label>
            <input type="text" name="system.attributes.spells.used" value="{{system.attributes.spells.used}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="resource flex-group-center grid-span-2">
    <div class="widecontainer">

      {{!-- Conditions --}}
      <h2 class="section-header">Conditions</h2>
      
      <ol class="items-list effects-list">
        {{#each effects as |section sid|}}
        <li class="items-header flexrow" data-effect-type="{{section.type}}" data-parent-id="{{@root.actor.id}}">
          <h3 class="item-name effect-name flexrow">{{localize section.label}}</h3>
          <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="create" title="{{localize 'DOCUMENT.Create' type=" Effect"}}">
              <i class="fas fa-plus"></i>
            </a>
          </div>
        </li>
      
        <ol class="item-list">
          {{#each section.effects as |effect|}}
          <li class="item effect flexrow conditionrow" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}">
            <div class="item-name effect-name flexrow">
              <img class="item-image" src="{{effect.icon}}" />
              <a class="effect-control" data-action="toggle" title="{{localize 'RECON_QUEST.Effect.Toggle'}}">
                <h4>{{effect.name}}</h4>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
