
<div class="resources grid grid-5col">
<div class="resource flex-group-center grid-span-4">
  <h2 class='section-header'>{{localize 'DOCUMENT.Items'}}</h2>
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Name'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='Create item' data-type='feature'>
          <i class='fas fa-plus'></i>
          New
        </a>
      </div>
    </li>
    {{#each features as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' feature'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' feature'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>
<div class="resource flex-group-center grid-span-1">
<h2 class='section-header'>Currency</h2>
<div class="ability flexrow flex-group-center">
      <label title="Aurichalcum pieces"for="system.attributes.baseov.value" class="resource-label flexlarge align-left">Aurichalcum</label>
      <input type="text" name="system.attributes.baseov.value" value="{{system.currency.ap.value}}"
        data-dtype="Number" />
    </div>

    <div class="ability flexrow flex-group-center">
      <label title="Gold pieces" for="system.attributes.basedvme.value" class="resource-label flexlarge align-left">Gold
        </label>
      <input type="text" name="system.attributes.basedvme.value" value="{{system.currency.gp.value}}"
        data-dtype="Number" />
    </div>

    <div class="ability flexrow flex-group-center">
      <label title="Silver pieces"for="system.attributes.basedvmi.value" class="resource-label flexlarge align-left">Silver
        </label>
      <input type="text" name="system.attributes.basedvmi.value" value="{{system.currency.sp.value}}"
        data-dtype="Number" />
    </div>

    <div class="ability flexrow flex-group-center">
      <label title="Copper pieces" for="system.attributes.armordv.value" class="resource-label flexlarge align-left">Copper
        </label>
      <input type="text" name="system.attributes.armordv.value" value="{{system.currency.cp.value}}"
        data-dtype="Number" />
    </div>
</div>
</div>