<ol class='items-list'>
    <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-formula'>Type</div>
        <div class='item-formula'>Role</div>
        <div class='item-formula'>Location</div>
        <div class='item-formula'>Monthly cost</div>
        <div class='item-formula'>Quick note</div>
        <div class='item-controls'>
            <a class='item-control item-create' title='Add companion' data-type='companion'>
                <i class='fas fa-plus'></i>
                New
            </a>
        </div>
    </li>
    {{#each companions as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>

            <div class='item-image'>
                <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
            </div>

            <h4>{{item.name}}</h4>
        </div>
        <div class='item-companiontype item-prop'>{{item.system.companiontype}}</div>
        <div class='item-companionrole item-prop'>{{item.system.role}}</div>
        <div class='item-location item-prop'>{{item.system.location}}</div>
        <div class='item-companionmontlycost item-prop'>{{item.system.monthlycost}}</div>
        <div class='item-companionquicknote item-prop'>{{item.system.companionquicknote}}</div>
        
        <div class='item-controls'>
            <a class='item-control item-edit' title='Edit'>
                <i class='fas fa-edit'></i>
            </a>
            <a class='item-control item-delete' title='Delete'>
                <i class='fas fa-trash'></i>
            </a>
        </div>
    </li>
    {{/each}}
</ol>